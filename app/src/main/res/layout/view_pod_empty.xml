<?xml version="1.0" encoding="utf-8"?>
<mk.podcast.com.views.viewpods.EmptyViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="18dp"
                android:id="@+id/ivEmptyImage"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/empty"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/contrail_one"
                android:layout_gravity="center"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_viewpod_label"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="3"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/text_color_tertary"
                android:fontFamily="@font/contrail_one"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_rounded_corner_btn1"
                android:textColor="@color/text_color_primary"
                android:textSize="14sp"
                android:text="@string/find_something_new"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_rounded_corner_btn2"
                android:textColor="@color/text_color_primary"
                android:textSize="14sp"
                android:text="@string/reload"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_more"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</mk.podcast.com.views.viewpods.EmptyViewPod>