<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_margin="6dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/media_bg_color"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="05:15"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_margin="4dp"
            android:padding="3dp"
            android:fontFamily="@font/contrail_one"/>
        <ProgressBar
            android:id="@+id/mini_player_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:indeterminateBehavior="repeat"
            android:progress="45"
            android:progressBackgroundTint="@color/white"
            android:progressTint="@color/progress_color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_margin="4dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="15:15"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_weight="2"
            android:padding="3dp"
            android:fontFamily="@font/contrail_one"/>
    </LinearLayout>
    <include layout="@layout/custom_meida_controller_layout"/>
</LinearLayout>

</androidx.cardview.widget.CardView>